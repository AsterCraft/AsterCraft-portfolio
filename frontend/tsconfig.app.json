{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": "./src",
    "paths": {
      "@shared": [
        "shared/index.ts"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@widgets": [
        "widgets/index.ts"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@pages": [
        "pages/index.ts"
      ],
      "@pages/*": [
        "pages/*"
      ]
    },
    "types": [
      "vite/client",
      "@react-router/dev"
    ]
  },
  "include": [
    "src",
    "*.ts"
  ]
}
